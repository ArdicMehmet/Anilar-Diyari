<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AniyiGoster">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/textbg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/selectimage" />

            <TextView
                android:id="@+id/aniBasligiGosterTextView"

                android:layout_width="377dp"
                android:textColor="#FAF9F9"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/baslikbg"
                android:gravity="center"
                android:text="Baslik"
                android:textSize="26sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/aniGosterTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/koseleryuvarlak"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="İcerik"
                android:textStyle="italic"
                android:textSize="22sp"
                android:layout_marginBottom="26dp"/>

            <Button
                android:id="@+id/duzenleButton"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:background="@drawable/butonbg"
                android:onClick="duzenle"
                android:text="Düzenle"
                android:textAllCaps="false" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>